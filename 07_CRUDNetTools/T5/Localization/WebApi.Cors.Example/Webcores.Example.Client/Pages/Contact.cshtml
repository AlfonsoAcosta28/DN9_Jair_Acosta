@page
@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.Extensions.Localization;
@model Webcores.Example.Client.Pages.ContactModel
@{
}

@inject IStringLocalizer<ContactModel> localizer;
@inject IHtmlLocalizer<ContactModel> htmlLocalizer;

<div class="container py-4">
    <h1>Formulario de Contacto</h1>
    <form id="contactForm">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">@localizer.GetString("Name")</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="@localizer.GetString("Name")">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">@localizer.GetString("EmailAdress")</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="@localizer.GetString("EmailAdress")">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Message" class="form-label">@localizer.GetString("Message")</label>
            <textarea class="form-control" asp-for="Message" rows="5" placeholder="@localizer.GetString("Message")"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">@localizer.GetString("Submit")</button>
    </form>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}