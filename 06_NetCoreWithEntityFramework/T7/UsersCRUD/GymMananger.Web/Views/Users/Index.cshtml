@model List<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeaderRight{
    <form class="d-flex mx-auto">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success bg-dark" type="submit">Search</button>
    </form>
}

<div class="container">
    <h1 class="mt-5">Users</h1>

    <div class="row">
        <div class="col-12">
            <a asp-action="Create" class="btn btn-outline-success float-end">Add User</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">USER NAME</th>
                <th scope="col">PHONE NUMBER</th>
                <th scope="col">EMAIL</th>
                <th scope="col"></th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <th scope="row">@member.UserName</th>
                    <th>@member.PhoneNumber</th>
                    <th>@member.Email</th>
                    <td>
                        <a asp-action="Edit" class="btn btn-outline-info" asp-route-userId="@member.Id">Edit</a>
                    </td>
                    <td>
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-userId="@member.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

